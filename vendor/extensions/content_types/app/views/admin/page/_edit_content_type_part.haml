.content_type_part{ :id => "part_" + edit_content_type_part.name.gsub(/\W/, "_") }
  = hidden_field_tag "part[#{index}][name]", edit_content_type_part.name, :id => "part_#{index}_name"
  = hidden_field_tag "part[#{index}][filter_id]", edit_content_type_part.filter_id, :id => "part_#{index}_filter_id"
  %label{:for => "part_#{index}_content"}= edit_content_type_part.name.humanize
  %span.description= edit_content_type_part.description
  = find_and_preserve(content_type_part_field(edit_content_type_part, index))
