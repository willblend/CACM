%p= link_to_function "Change content_type &raquo;", "$('content_type-chooser').toggle();"
%ul#content_type-chooser{:style => "display: none;"}
  %li
    %strong Change content_type to:
  - ::ContentType.find(:all).each do |content_type|
    %li= link_to_unless(content_type == @content_content_type, content_type.name.humanize.titleize, :content_type => content_type)
  %li
    = link_to_unless(@content_content_type.blank?, "Blank Page", :content_type => '0')
- content_for :page_css do
  ul#content_type-chooser { list-style: none; margin: 0; padding: 0;}
  ul#content_type-chooser li { display: inline; margin: 0; padding: 0 0.5em; }
